.formatted-html-content p {
  color: #495057;
  font-size: 1.1rem;
  line-height: 1.7;
  font-weight: 400;
  margin-bottom: 16px;
  margin-top: 0;
}

.formatted-html-content h1,
.formatted-html-content h2,
.formatted-html-content h3,
.formatted-html-content h4,
.formatted-html-content h5,
.formatted-html-content h6 {
  color: var(--main-color);
  font-size: 1.3rem;
  font-weight: 600;
  margin-bottom: 8px;
  margin-top: 16px;
}

.formatted-html-content ul,
.formatted-html-content ol {
  padding-left: 16px;
  margin-bottom: 16px;
}

.formatted-html-content li {
  color: #495057;
  font-size: 1.1rem;
  line-height: 1.6;
  font-weight: 400;
  margin-bottom: 4px;
}
